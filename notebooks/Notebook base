def get_radec_from_registry(df):
    coords = SkyCoord(ra=df['RA (J2000)'].astype(float).values * u.deg,
                      dec=df['Dec (J2000)'].astype(float).values * u.deg,
                      frame='icrs')
    ra = coords.ra.wrap_at(180 * u.deg).radian
    dec = coords.dec.radian
    return ra, dec
